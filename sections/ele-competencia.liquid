

<div class="w-full container mx-auto py-16 md:py-32 relative overflow-hidden flex items-center flex-col md:flex-row gap-0">
   
    <div class="w-full md:w-3/8 h-full flex flex-col justify-center items-start gap-10 px-6 md:px-16 py-16 text-left ">
        <div class="flex items-center gap-4 ">
            <img src="{{ section.settings.img2 | img_url: '2040x' }}" alt="Imagen Computadora" class=" w-[50px] md:w-[80px] h-auto" loading="lazy">
            <h2 class="text-3xl md:text-5xl  text-azul mt-4 ">{{ section.settings.titulo }}</h2>
        </div>
        <p class="text-2xl md:text-3xl ">{{ section.settings.subtitulo }}</p>
    </div>
        <div class="w-full md:w-5/8 h-full flex justify-center items-center">
        <img src="{{ section.settings.img | img_url: '2040x' }}" alt="Imagen Computadora" class="w-full h-full object-cover" loading="lazy">
        </div>

</div>

{% schema %}
    {
      "name": "ele-competencia",
      "class": "ele-competencia",
      "settings": [{
              "type": "image_picker",
              "id": "img",
              "label": "Imagen Computadora",
              "info": "1900 px X 750px"
            },{
              "type": "image_picker",
              "id": "img2",
              "label": "Imagen ",
              "info": "1900 px X 750px"
            },{
              "type": "text",
              "id": "titulo",
              "label": "Título",
              "default": "VS. LA COMPETENCIA"
           
            },{
              "type": "text",
              "id": "subtitulo",
              "label": "Subtitulo",
              "default": "Nuestros cortes están diseñados desde cero para ajustarse correctamente y brindar libertad de movimiento."
           
            }
        
        ],
      "presets": [
        {
          "name": "ele-competencia",
          "category": "ele-competencia"
        }
      ]
    }
    {% endschema %}