<div class="py-16 md:py-32 md:px-6 px-0 container mx-auto">
       <p class=" px-6 md:px-0">ESTO ES</p>
       <h2 class="text-3xl md:text-5xl  text-azul mt-6 px-6 md:px-0  ">{{ section.settings.titulo }}</h2>

         {% for block in section.blocks %}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5 md:gap-10 mt-10 items-center">
                <div class="flex flex-col justify-center items-center md:order-2">
                    <img class="" src="{{ block.settings.img | img_url: '1900x750' }}" alt="Imagen Computadora">
                </div>
               <div class="w-full flex flex-col gap-5 px-6   md:order-1">
                 <div class="flex   justify-between items-center ">
                   <h2 class="text-3xl md:text-5xl  text-azul  px-6 md:px-0  ">{{ block.settings.titulo }}</h2>
                    <div class="h-[3px] w-[100px] bg-[#0E3254]">.</div>
                </div>
                <p class="text-2xl md:text-3xl text-justify mt-4 px-6 md:px-0">{{ block.settings.texto }}</p>
               </div>

            </div>


        {% endfor %}


</div>




{% schema %}
    {
      "name": "para-ti",
      "class": "para-ti",
      "settings": [
        {
              "type": "text",
              "id": "titulo",
              "label": "Título",
              "default": "DISEÑO + COMODIDAD"
           
            }
        
        ],"blocks": [
      {
        "type": "Beneficio",
        "name": "Beneficio",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "Imagen Computadora",
            "info": "1900 px X 750px"
          },    
          {
            "type": "text",
            "id": "titulo",
            "label": "Titulo",
            "default": "Tela fresca para el uso diario"
          },
          {
            "type": "text",
            "id": "texto",
            "label": "Descripción",
            "default": "Nuestras telas ligeras están pensadas para el uso diario: suaves al tacto y resistentes al desgaste."
          }
        ]
      }
    ],
      "presets": [
        {
          "name": "para-ti",
          "category": "Desarrollo"
        }
      ]
    }
{% endschema %}