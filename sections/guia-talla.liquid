

<div class="w-full  h-auto md:h-[450px] flex flex-col md:flex-row justify-center items-center gap-0  py-16 md:py-32 relative overflow-hidden">
    <div class="w-full md:w-1/2 h-full flex justify-center items-center">
        <img src="{{ section.settings.img | img_url: '2040x' }}" alt="Imagen Computadora" class="w-full h-full object-cover" loading="lazy">
    </div>
    <div class="w-full md:w-1/2 h-full flex flex-col justify-center items-start gap-10 px-6 md:px-16 py-16 text-left bg-[#596F85]">
        <h2 class="text-3xl md:text-5xl  text-white">{{ section.settings.titulo }}</h2>
        <p class="text-2xl md:text-3xl text-white">{{ section.settings.subtitulo }}</p>
        <a href="{{ section.settings.url }}" class="bg-[#0E3254] text-2xl text-white py-4 px-16 rounded-full hover:bg-[#0e3254f6] transition duration-300 ease-in-out self-center md:self-start">{{ section.settings.textUrl }}</a>
    </div>
    

</div>
{% schema %}
    {
      "name": "guia-talla",
      "class": "guia-talla",
      "settings": [{
              "type": "image_picker",
              "id": "img",
              "label": "Imagen Computadora",
              "info": "1900 px X 750px"
            },{
              "type": "text",
              "id": "titulo",
              "label": "Título",
              "default": "¿No estás seguro de tu talla?"
           
            },{
              "type": "text",
              "id": "subtitulo",
              "label": "Subtitulo",
              "default": "Consulta nuestra guía y encuentra el ajuste perfecto para ti."
           
            },{
              "type": "url",
              "id": "url",
              "label": "Url"
            },{
              "type": "text",
              "id": "textUrl",
              "label": "textUrl",
              "default": "GUÍA DE TALLAS"
           
            }
        
        ],
      "presets": [
        {
          "name": "guia-talla",
          "category": "guia-talla"
        }
      ]
    }
    {% endschema %}
    